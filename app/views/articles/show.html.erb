<%= button_to 'Back', articles_path, method: :get  %>
<h1><%= @article.title %> </h1>
<p><%= @article.body %></p>

<ul>
  <li><%= link_to 'Edit Article', edit_article_path %></li>
    <li><%= link_to 'Delete Article', article_path(@article), data: {
      turbo_method: :delete, turbo_confirm: 'Are you sure?'
    } %></li>
</ul>

<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <strong><%= comment.author %></strong><br>
    <%= comment.body %>
  </p>
  <p>
    <%= link_to 'Delete Comment', [comment.article, comment], data: {
      turbo_method: :delete, turbo_confirm: 'Are you sure?'
    } %>
  <% end %>


<h2>Add a comment</h2>
<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
  <% end %>

