<h1>New Article</h1>

<%= form_with model: @article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |msg| %>
      <div><%= msg %></div>
      <% end %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
    <% @article.errors.full_messages_for(:body).each do |msg| %>
      <div><%= msg %></div>
      <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>